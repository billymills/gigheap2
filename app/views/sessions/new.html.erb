<% provide(:title, "Sign in") %>

<div class="container">
	<h2 class="center">Sign in</h2>
	<div class="row">
		<div class="span6 offset3">
			<%= form_for(:session, url: sessions_path) do |f| %>

				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.submit "Sign in", class: "btn btn-small btn-warning" %>
			<% end %>

			<p><%= link_to "Sign up", signup_path %> to start listing jobs on gigheap!</p>
		</div>
	</div>
</div>
